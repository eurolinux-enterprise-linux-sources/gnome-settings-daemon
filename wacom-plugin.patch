+}
+
+void
+gsd_rr_output_info_get_geometry (GnomeOutputInfo *self,
+				 int *x,
+				 int *y,
+				 int *width,
+				 int *height)
+{
+	g_return_if_fail (self != NULL);
+
+	if (x)
+		*x = self->x;
+	if (y)
+		*y = self->y;
+	if (width)
+		*width = self->width;
+	if (height)
+		*height = self->height;
