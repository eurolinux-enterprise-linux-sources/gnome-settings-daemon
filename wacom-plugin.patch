+gsd_gconf_build_path (const char *path, const char *key)
+{
+	g_return_val_if_fail (path != NULL, NULL);
+	g_return_val_if_fail (key != NULL, NULL);
+
+	return g_strdup_printf ("%s/%s", path, key);
+}
