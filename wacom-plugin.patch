+
+void
+gsd_rr_output_info_get_vendor (GnomeOutputInfo *self,
+			       gchar* vendor)
+{
+	g_return_if_fail (self != NULL);
+	g_return_if_fail (vendor != NULL);
+
+	memcpy (vendor, self->vendor, 4);
+}
