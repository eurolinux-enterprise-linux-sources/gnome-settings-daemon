+{
+	device_manager->priv = GSD_DEVICE_MANAGER_GET_PRIVATE (device_manager);
+	device_manager->priv->devices = g_hash_table_new_full (g_direct_hash,
+							       g_direct_equal,
+							       NULL, g_free);
+	device_manager->priv->opcode  = 0;
+}
